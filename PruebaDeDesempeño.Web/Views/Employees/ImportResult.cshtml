@model PruebaDeDesempeño.Web.Services.ImportResult
@{
    ViewData["Title"] = "Resultado de Importación";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">
                    @if (Model.Success)
                    {
                        <i class="bi bi-check-circle text-success me-2"></i>
                        <span>Importación Completada</span>
                    }
                    else
                    {
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                        <span>Importación con Errores</span>
                    }
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Success)
                {
                    <div class="alert alert-success mb-4">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        La importación se completó exitosamente.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        La importación se completó pero hubo algunos errores.
                    </div>
                }

                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="kpi-card primary">
                            <div class="kpi-icon">
                                <i class="bi bi-person-plus"></i>
                            </div>
                            <div class="kpi-value">@Model.EmployeesImported</div>
                            <div class="kpi-label">Empleados Creados</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="kpi-card success">
                            <div class="kpi-icon">
                                <i class="bi bi-person-check"></i>
                            </div>
                            <div class="kpi-value">@Model.EmployeesUpdated</div>
                            <div class="kpi-label">Empleados Actualizados</div>
                        </div>
                    </div>
                </div>

                @if (Model.Errors?.Any() == true)
                {
                    <div class="card" style="background: rgba(239, 68, 68, 0.1); border-color: var(--danger);">
                        <div class="card-header">
                            <h6 class="card-title text-danger mb-0">
                                <i class="bi bi-exclamation-circle me-2"></i>
                                Errores Encontrados (@Model.Errors.Count)
                            </h6>
                        </div>
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush" style="background: transparent;">
                                @foreach (var error in Model.Errors.Take(20))
                                {
                                    <li class="list-group-item" style="background: transparent; border-color: rgba(255,255,255,0.1);">
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        @error
                                    </li>
                                }
                                @if (Model.Errors.Count > 20)
                                {
                                    <li class="list-group-item text-muted" style="background: transparent;">
                                        ... y @(Model.Errors.Count - 20) errores más
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                <div class="d-flex gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-upload me-2"></i>
                        Importar Otro Archivo
                    </a>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-speedometer2 me-2"></i>
                        Ir al Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
