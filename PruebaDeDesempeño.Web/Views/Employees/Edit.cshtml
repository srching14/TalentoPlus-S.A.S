@model PruebaDeDesempeño.Web.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Editar Empleado";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil me-2"></i>
                    Editar Empleado
                </h5>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-2"></i>
                    Volver
                </a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <h6 class="text-muted text-uppercase mb-3">Información Personal</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DocumentType" class="form-label"></label>
                            <select asp-for="DocumentType" class="form-select">
                                <option value="CC">Cédula de Ciudadanía</option>
                                <option value="CE">Cédula de Extranjería</option>
                                <option value="TI">Tarjeta de Identidad</option>
                                <option value="PP">Pasaporte</option>
                            </select>
                            <span asp-validation-for="DocumentType" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="DocumentNumber" class="form-label"></label>
                            <input asp-for="DocumentNumber" class="form-control" />
                            <span asp-validation-for="DocumentNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="BirthDate" class="form-label"></label>
                            <input asp-for="BirthDate" class="form-control" type="date" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Seleccione...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                                <option value="O">Otro</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h6 class="text-muted text-uppercase mb-3">Información Laboral</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="DepartmentId" class="form-label"></label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                <option value="">Seleccione un Departamento...</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Position" class="form-label"></label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Salary" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Salary" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="HireDate" class="form-label"></label>
                            <input asp-for="HireDate" class="form-control" type="date" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<PruebaDeDesempeño.Web.Models.EmployeeStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h6 class="text-muted text-uppercase mb-3">Perfil Profesional</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label asp-for="EducationLevel" class="form-label"></label>
                            <select asp-for="EducationLevel" class="form-select" asp-items="Html.GetEnumSelectList<PruebaDeDesempeño.Web.Models.EducationLevel>()"></select>
                            <span asp-validation-for="EducationLevel" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="ProfessionalProfile" class="form-label"></label>
                            <textarea asp-for="ProfessionalProfile" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="ProfessionalProfile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i>
                            Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
