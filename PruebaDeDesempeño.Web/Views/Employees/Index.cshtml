@model IEnumerable<PruebaDeDesempeño.Web.ViewModels.EmployeeViewModel>
@{
    ViewData["Title"] = "Gestión de Empleados";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="bi bi-people me-2"></i>
            Empleados
        </h5>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>
                Nuevo
            </a>
            <a asp-action="ImportExcel" class="btn btn-success">
                <i class="bi bi-file-earmark-excel me-2"></i>
                Importar
            </a>
            <a asp-action="ExportExcel" class="btn btn-outline-success">
                <i class="bi bi-download me-2"></i>
                Exportar
            </a>
        </div>
    </div>
    <div class="card-body">
        <!-- Search Form -->
        <form asp-action="Index" method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control" placeholder="Buscar por nombre, documento o cargo..." value="@ViewBag.SearchTerm">
            </div>
            <div class="col-md-3">
                <select name="departmentId" class="form-select" asp-items="ViewBag.Departments">
                    <option value="">Todos los Departamentos</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<PruebaDeDesempeño.Web.Models.EmployeeStatus>()">
                    <option value="">Todos los Estados</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="bi bi-search me-2"></i>
                    Buscar
                </button>
            </div>
        </form>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                <tr>
                    <th>Empleado</th>
                    <th>Documento</th>
                    <th>Cargo</th>
                    <th>Departamento</th>
                    <th>Fecha Ingreso</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <div class="avatar-circle-sm">
                                    @item.FullName.Substring(0, 1)
                                </div>
                                <div>
                                    <div class="fw-medium">@item.FullName</div>
                                    <div class="small text-muted">@item.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>@item.DocumentNumber</td>
                        <td>@item.Position</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.HireDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var badgeClass = item.Status switch
                                {
                                    PruebaDeDesempeño.Web.Models.EmployeeStatus.Activo => "bg-success",
                                    PruebaDeDesempeño.Web.Models.EmployeeStatus.Inactivo => "bg-secondary",
                                    PruebaDeDesempeño.Web.Models.EmployeeStatus.Vacaciones => "bg-warning text-dark",
                                    PruebaDeDesempeño.Web.Models.EmployeeStatus.Licencia => "bg-info text-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.Status</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="DownloadCv" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Descargar HV">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 text-muted">No se encontraron empleados con los criterios de búsqueda.</p>
            </div>
        }
    </div>
</div>

<!-- Delete Modals (outside table to prevent flickering) -->
@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar al empleado <strong>@item.FullName</strong>?</p>
                    <p class="text-muted small mb-0">Esta acción realizará un borrado lógico (inactivación).</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .avatar-circle-sm {
        width: 32px;
        height: 32px;
        background-color: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.8rem;
    }
</style>

