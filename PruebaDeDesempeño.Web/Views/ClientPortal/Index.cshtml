@model PruebaDeDesempeño.Web.ViewModels.ClientProfileViewModel
@{
    ViewData["Title"] = "Mi Portal";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Welcome Header -->
        <div class="card mb-4" style="background: var(--gradient-primary); border: none;">
            <div class="card-body py-4">
                <div class="d-flex align-items-center gap-3">
                    <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-person-circle" style="font-size: 2rem; color: white;"></i>
                    </div>
                    <div>
                        <h2 class="mb-1 text-white">¡Bienvenido, @Model.FullName!</h2>
                        <p class="mb-0" style="color: rgba(255,255,255,0.8);">Este es tu portal personal</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Profile Info Card -->
            <div class="col-md-6 mb-4">
                <div class="card h-100" style="background: var(--bg-card); border: 1px solid rgba(255,255,255,0.1);">
                    <div class="card-header d-flex align-items-center gap-2" style="background: rgba(255,255,255,0.05); border-bottom: 1px solid rgba(255,255,255,0.1);">
                        <i class="bi bi-person-vcard" style="color: var(--primary-light);"></i>
                        <span style="color: var(--text-primary);">Información Personal</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="small" style="color: var(--text-muted);">Nombre Completo</label>
                            <p class="mb-0" style="color: var(--text-primary); font-size: 1.1rem;">
                                <i class="bi bi-person me-2" style="color: var(--primary-light);"></i>
                                @Model.FullName
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="small" style="color: var(--text-muted);">Correo Electrónico</label>
                            <p class="mb-0" style="color: var(--text-primary); font-size: 1.1rem;">
                                <i class="bi bi-envelope me-2" style="color: var(--primary-light);"></i>
                                @Model.Email
                            </p>
                        </div>
                        <a asp-action="EditProfile" class="btn btn-primary mt-2">
                            <i class="bi bi-pencil me-1"></i> Editar Perfil
                        </a>
                    </div>
                </div>
            </div>

            <!-- Account Info Card -->
            <div class="col-md-6 mb-4">
                <div class="card h-100" style="background: var(--bg-card); border: 1px solid rgba(255,255,255,0.1);">
                    <div class="card-header d-flex align-items-center gap-2" style="background: rgba(255,255,255,0.05); border-bottom: 1px solid rgba(255,255,255,0.1);">
                        <i class="bi bi-shield-check" style="color: var(--success);"></i>
                        <span style="color: var(--text-primary);">Información de Cuenta</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="small" style="color: var(--text-muted);">Fecha de Registro</label>
                            <p class="mb-0" style="color: var(--text-primary);">
                                <i class="bi bi-calendar-check me-2" style="color: var(--success);"></i>
                                @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="small" style="color: var(--text-muted);">Último Acceso</label>
                            <p class="mb-0" style="color: var(--text-primary);">
                                <i class="bi bi-clock-history me-2" style="color: var(--warning);"></i>
                                @(Model.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Primera vez")
                            </p>
                        </div>
                        <div class="mt-3 p-3" style="background: rgba(var(--success-rgb), 0.1); border-radius: 8px;">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-check-circle-fill" style="color: var(--success);"></i>
                                <span style="color: var(--text-secondary);">Cuenta activa y verificada</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card" style="background: var(--bg-card); border: 1px solid rgba(255,255,255,0.1);">
            <div class="card-header d-flex align-items-center gap-2" style="background: rgba(255,255,255,0.05); border-bottom: 1px solid rgba(255,255,255,0.1);">
                <i class="bi bi-lightning" style="color: var(--warning);"></i>
                <span style="color: var(--text-primary);">Acciones Rápidas</span>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-action="EditProfile" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-person-gear d-block mb-2" style="font-size: 1.5rem;"></i>
                            Editar Mi Perfil
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-house d-block mb-2" style="font-size: 1.5rem;"></i>
                            Ir al Inicio
                        </a>
                    </div>
                    <div class="col-md-4">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                            <button type="submit" class="btn btn-outline-danger w-100 py-3">
                                <i class="bi bi-box-arrow-right d-block mb-2" style="font-size: 1.5rem;"></i>
                                Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
